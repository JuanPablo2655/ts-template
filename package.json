	"devDependencies": {
		"@commitlint/cli": "^17.4.4",
		"@commitlint/config-angular": "^17.4.4",
		"@types/eslint": "^8.21.2",
		"@types/node": "^18.15.3",
		"eslint": "^8.36.0",
		"eslint-config-neon": "^0.1.40",
		"husky": "^8.0.3",
		"prettier": "^2.8.4",
		"pretty-quick": "^3.1.3",
		"tslib": "^2.5.0",
		"typescript": "^4.9.5"
	},
	"packageManager": "yarn@3.5.0"
